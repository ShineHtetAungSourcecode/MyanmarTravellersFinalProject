@model IEnumerable<MyanmarTravellers.Models.Bus>

@{
    ViewBag.Title = "Index";
}

<h2>Buses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Plate No.
        </th>
        <th>
            Seats Per Row
        </th>
        <th>
            No. of Rows
        </th>
        <th>
            Busline
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.plate_no)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.seats_per_row)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.no_of_rows)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BusLine.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new {@class="btn btn-primary"})
            @Html.ActionLink("Details", "Details", new { id=item.id }, new {@class="btn btn-primary"}) 
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new {@class="btn btn-primary"})
        </td>
    </tr>
}

</table>
